<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/cb_selected"
        android:checked="false"
        android:layout_alignTop="@+id/tv_final_score"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="科目"
        android:textColor="@android:color/black"
        android:id="@+id/tv_subject"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tv_final_score"
        android:layout_toEndOf="@+id/tv_final_score" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="类型"
        android:textColor="@android:color/black"
        android:id="@+id/tv_category"
        android:layout_below="@+id/tv_subject"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="学分："
        android:textColor="@android:color/black"
        android:id="@+id/tv_credit"
        android:layout_alignTop="@+id/tv_final_score"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="总评："
        android:textColor="@android:color/black"
        android:id="@+id/tv_final_score"
        android:layout_below="@+id/tv_subject"
        android:layout_toRightOf="@+id/cb_selected"
        android:layout_toEndOf="@+id/cb_selected" />

</RelativeLayout>